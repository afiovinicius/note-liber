{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "core:tray:default",
    "core:menu:default",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "fs:allow-mkdir",
    {
      "identifier": "fs:scope",
      "allow": ["$APP/*", "$DOCUMENT/*", "$DOWNLOAD/*"]
    },
    "fs:scope",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:scope-home",
    "fs:allow-home-read",
    "fs:allow-home-write",
    "fs:allow-create",
    "fs:deny-create",
    "core:window:allow-set-size",
    "core:window:allow-set-always-on-top",
    "core:window:allow-set-resizable"
  ],
  "platforms": ["linux"]
}
