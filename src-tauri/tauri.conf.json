{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "note-liber",
  "version": "1.2.1",
  "identifier": "com.note-liber.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Note Liber",
        "width": 800,
        "minWidth": 600,
        "maxWidth": 800,
        "height": 600,
        "minHeight": 464,
        "maxHeight": 600,
        "resizable": false,
        "fullscreen": false,
        "focus": false
      }
    ],
    "security": {
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {}
    }
  }
}
